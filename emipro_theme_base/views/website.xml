<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="website_settings_view_form_ept" model="ir.ui.view">
			<field name="name">website.view.form.inherit.variant
			</field>
			<field name="model">website</field>
			<field name="priority" eval="30" />
			<field name="inherit_id" ref="website.view_website_form" />
			<field name="arch" type="xml">
				<xpath expr="//sheet" position="inside">
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="is_ajax_sorting_products"></field>
							</div>
							<div class="o_setting_right_pane">
								<label for="is_ajax_sorting_products" />
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_price_filter_enable"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_price_filter_enable"/>
                                <div class="text-muted">
                                    This feature works on compute price based on your price list
                                    and product configuration which will
                                    make your product listing little bit slower on shop page.
                                </div>
                            </div>
                        </div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>