<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="configure_website_menus_form_view_inherit"  model="ir.ui.view">
        <field name="name">configure.website.menus.form.view.inherit</field>
        <field name="model">website.menu</field>
        <field name="inherit_id" ref="website.website_menus_form_view"></field>
        <field name="arch" type="xml">
        	<xpath expr="//form/sheet/group" position="before">
                     <div class="oe_button_box">
                         <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_edit_menu">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Design Menu</span>
                            </div>
                        </button> 
                    </div> 
                </xpath>
                <xpath expr="//form/sheet/group" position="after">
                	<group>
                        <field name="is_dynamic_menu" />
                         <field name="is_vertical_menu" />
                	</group>
                </xpath>
            </field>
    </record>
</odoo>



