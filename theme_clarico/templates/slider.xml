                                                        <span class="fa fa-shopping-cart" role="img"
															aria-label="Add to cart" />
                                                    </a>
                                                </t>
                                                <t t-if="len(product.product_variant_ids) &gt; 1">
                                                    <a role="button" class="btn btn-secondary"
														t-att-href="'/shop/product/%s' % slug(product)"
