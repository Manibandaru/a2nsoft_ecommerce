                    <t
						t-if="is_default and len(slider_obj.slider_filter_ids.filtered(lambda r:r.website_published == True ).ids) &gt; 1">
                        <t
							t-foreach="slider_obj.slider_filter_ids.filtered(lambda r:r.website_published == True )"
